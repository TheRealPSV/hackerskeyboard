<com.voraindustries.hackerskeyboardneon.LatinKeyboardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:latin="http://schemas.android.com/apk/res-auto"
    android:id="@android:id/keyboardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/latinkeyboard_key_color_black"
    android:verticalCorrection="0dip"

    latin:keyBackground="@drawable/btn_keyboard_key_neon"
    latin:keyCursorColor="@color/latinkeyboard_key_color_white"
    latin:keyHintColor="@color/key_neon_hint"
    latin:keyTextColor="@color/key_neon_text"
    latin:keyTextStyle="bold"
    latin:recolorSymbols="true"
    latin:shadowColor="@color/key_neon_shadow"
    latin:shadowRadius="20" />
